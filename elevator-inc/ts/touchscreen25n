        rednet.broadcast("Floor0")
        mon.clear()
        mon.setCursorPos(4,8)
        mon.write("Ground Floor")
        mon.setCursorPos(6,10)
        mon.write("Selected")
		mon.setCursorPos(5,17)
		mon.write("Powered By:")
